<h1>Listing blogs</h1>

<table>
  <tr>
    <th>User</th>
    <th>Body</th>
    <th>Title</th>
    <th>Published</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @blogs.each do |blog| %>
  <tr>
    <td><%= blog.user_id %></td>
    <td><%= blog.body %></td>
    <td><%= blog.title %></td>
    <td><%= blog.published %></td>
    <td><%= link_to 'Show', admin_blog_path(blog) %></td>
    <td><%= link_to 'Edit', edit_admin_blog_path(blog) %></td>
    <td><%= link_to 'Destroy', admin_blog(blog), confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

