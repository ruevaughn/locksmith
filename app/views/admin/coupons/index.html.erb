
<div id="admin_coupons">
<table>
  <% @coupons.each do |coupon| %>
  <th><h3><%= coupon.name %></h3></th>
  	<tr>
  	  <td>Description: <%= coupon.description %></td>
      <td>Expires: <%= coupon.expiration.strftime("%m-%d-%Y") %></td>
      <td>
		    <%= link_to "Edit Coupon", edit_admin_coupon_path(coupon) %> |
  		  <%= link_to "Delete Coupon", admin_coupon_path(coupon), :method => :delete, :confirm => "Are you sure you want to delete this coupon?" %> <br />
      </td>
    </tr>
<% end %>
</table>

<br /><%= link_to "Create Coupon", new_admin_coupon_path %> <br />